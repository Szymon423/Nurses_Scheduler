<Window x:Class="Nurses_Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nurses_Scheduler"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="Grafiki" Height="1080" Width="1920">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Column="1"
                   Grid.Row="2"
                   Grid.RowSpan="5"
                   Margin="0 0 0 0"
                   FontFamily="Sans Serif"
                   FontSize="35"
                   TextWrapping="Wrap">
                   Harmonogramowanie pracy personelu medycznego
        </TextBlock>

        <Separator Grid.Column="1"
                   Grid.Row="7"
                   Margin="0, 30, 0, 30"/>
        
        <!--ROW 2--> 
        <Button Grid.Column="1"
                Grid.Row="8"
                Content="DODAJ ODDZIAŁ" 
                Click="AddDepartmentWindow_Button"
                Margin="0, 0, 0, 10"
                MinHeight="35"/>

        <Button Grid.Column="1"
                Grid.Row="9"
                Content="DODAJ PRACOWNIKA" 
                Click="AddEmployeeWindow_Button"
                Margin="0, 0, 0, 10"
                MinHeight="35"/>

        <Separator Grid.Column="1"
                   Grid.Row="10"
                   Margin="0, 30, 0, 30"/>

        <!-- ROW 5 -->
        <Button Grid.Column="1"
                Grid.Row="11"
                Content="WPROWADŹ PROŚBY" 
                Click="EnterRequests_Button"
                Margin="0, 0, 0, 10"
                MinHeight="35"/>

        <Button Grid.Column="1"
                Grid.Row="12"
                Content="GENERUJ GRAFIK" 
                Click="GenerateSchedule_Button"
                Margin="0, 0, 0, 10"
                MinHeight="35"/>

        <Button Grid.Column="1"
                Grid.Row="13"
                Content="MODYFIKUJ ISTNIEJĄCY GRAFIK" 
                Click="ModifyExistingSchedule_Button"
                Margin="0, 0, 0, 10"
                MinHeight="35"/>

        <Label Content="Wyszukaj oddział:"
               Grid.Column="5"
               Grid.Row="2"
               Margin="0 0 0 0"/>

        <Label Content="Wyszukaj pracownika:"
               Grid.Column="3"
               Grid.Row="2"
               Margin="0 0 0 0"/>

        <!-- ROW 3 -->
        <TextBox Grid.Column="3"
                 Grid.Row="3"
                 Margin="0 0 0 0"
                 TextChanged="DepartmentTextBox_TextChanged"/>

        <TextBox Grid.Column="5"
                 Grid.Row="3"
                 Margin="0 0 0 0"
                 TextChanged="EmployeeTextBox_TextChanged"/>

        <!-- ROW 4 -->
        <ListView Grid.Column="5"
                  Grid.Row="5"
                  Grid.RowSpan="10"
                  x:Name="Department_ListView"
                  SelectionChanged="Department_ListView_SelectionChanged"
                  Margin="0 0 0 5">
            <ListView.ItemTemplate >
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding DepartmentName}"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding DepartmentShortName}"
                                   FontSize="15"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- ROW 4 -->
        <ListView Grid.Column="3"
                  Grid.Row="5"
                  Grid.RowSpan="10"
                  x:Name="Employee_ListView"
                  SelectionChanged="Employee_ListView_SelectionChanged"
                  Margin="0 0 0 5">
            <ListView.ItemTemplate >
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding FullName}"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Occupation}"
                                   FontSize="15"
                                   FontStyle="Italic"/>
                        <TextBlock Text="{Binding Department}"
                                   FontSize="15"
                                   FontStyle="Italic"
                                   Foreground="Blue"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>

</Window>
