<Window x:Class="Nurses_Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nurses_Scheduler"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Grafiki" Height="300" Width="400">

    <StackPanel Margin="15">
        <Button Content="DODAJ ODDZIAŁ" 
                Click="AddDepartmentWindow_Button"
                Margin="0, 0, 0, 5"/>

        <Button Content="DODAJ PRACOWNIKA" 
                Click="AddEmployeeWindow_Button"
                Margin="0, 0, 0, 5"/>
        <TextBox Margin="0 5 0 5"
                 TextChanged="TextBox_TextChanged"/>
        <ListView x:Name="Department_ListView"
                  SelectionChanged="Department_ListView_SelectionChanged"
                  Margin="0 0 0 5"
                  Height="150" >
            <ListView.ItemTemplate >
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding DepartmentName}"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding DepartmentShortName}"
                                   FontSize="15"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>

</Window>
