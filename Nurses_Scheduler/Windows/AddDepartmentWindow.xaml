<Window x:Class="Nurses_Scheduler.Windows.AddDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nurses_Scheduler.Windows"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Dodaj oddział" Height="200" Width="300">
    <StackPanel Margin="15">
        <Label>Nazwa oddziału:</Label>
        <TextBox x:Name="DepartmentName_TextBox"></TextBox>
        <Label>Skrót oddziału:</Label>
        <TextBox x:Name="DepartmentShortName_TextBox"></TextBox>
        <Button Content="DODAJ ODDZIAŁ" 
                Click="AddDepartment_Button"
                Margin="0, 10, 0, 0"/>
    </StackPanel>
</Window>
